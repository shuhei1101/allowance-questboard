{
  "expo": {
    "name": "frontend",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "allowance-questboard",
    "linking": {
      "prefixes": [
        "allowance-questboard://",
        "https://allowance-questboard.com",
        "https://*.allowance-questboard.com"
      ],
      "config": {
        "screens": {
          "Auth": {
            "screens": {
              "EmailVerify": "auth/email-verify"
            }
          }
        }
      }
    },
    "plugins": [
      "expo-system-ui"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "allowance-questboard.com",
              "pathPrefix": "/auth/email-verify"
            },
            {
              "scheme": "allowance-questboard"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}

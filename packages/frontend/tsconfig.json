{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@frontend/*": ["./src/*"],
      "@backend/*": ["../backend/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "app/**/*",
    "__tests__/**/*"
  ]
}

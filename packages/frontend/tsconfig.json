{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@backend/*": ["../backend/src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "app/**/*", "__tests__/**/*", "App.tsx", "index.ts"]
}
